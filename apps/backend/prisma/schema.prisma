generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id        String   @id
  content   String
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    String
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id        String     @id
  email     String     @unique
  password  String
  avatar    String?
  name      String?
  phone     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime
  birthday  DateTime?
  idCard    String?
  Document  Document[]
}
